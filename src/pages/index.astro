---
import MainLayout from "../layouts/MainLayout.astro";
import "../globals.css";
import Intro from "../components/Intro/Intro.astro";
import Offer from "../components/Offer/Offer.astro";
import Mission from "../components/Mission/Mission.astro";
import Opinions from "../components/Opinions/Opinions.astro";
import Process from "../components/Process/Process.astro";
import Results from "../components/Results/Results.astro";
import About from "../components/About/About.astro";
import Navbar from "../components/interface/Navbar.astro";
---

<MainLayout
  title="Salegency - Creativity to Profit."
  description="The world's first agency dedicated to optimizing monthly sales for experts and coaches."
>
  <header
    class="flex fixed top-4 left-0 right-0 items-center justify-center py-4 z-40"
  >
    <Navbar />
  </header>
  <main class="flex flex-col items-center px-4">
    <Intro />
    <Mission />
    <Opinions />
    <Offer />
    <Process />
    <Results />
    <About />
  </main>
</MainLayout>

<style>
  main {
    color: white;
  }
</style>
