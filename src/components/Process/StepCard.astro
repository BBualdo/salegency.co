---
const { step, title, description, timeline } = Astro.props;
---

<div
  class="lg:w-[268px] lg:min-h-[460px] bg-black/50 p-4 flex flex-col items-center gap-6"
>
  <div
    class="w-6 h-6 flex items-center justify-center text-greencell border-2 border-greencell rounded-full"
  >
    {step}
  </div>
  <div
    class="flex flex-col xs:max-lg:gap-2 flex-1 items-center justify-between"
  >
    <h3
      class="xs:text-lg lgtext-xl font-bold uppercase text-center text-balance"
    >
      {title}:
    </h3>
    <p class="text-center">{description}</p>
    <p class="">
      Timeline: <span class="uppercase text-greencell">{timeline}</span>
    </p>
  </div>
</div>
